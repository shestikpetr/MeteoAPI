# Environment Configuration
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Local Database (MySQL)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_USER=root
LOCAL_DB_PASSWORD=your-local-db-password
LOCAL_DB_NAME=meteo_local

# Remote Sensor Database
SENSOR_DB_HOST=your-sensor-db-host
SENSOR_DB_PORT=your-sensor-db-port
SENSOR_DB_USER=your-sensor-db-user
SENSOR_DB_PASSWORD=your-sensor-db-password
SENSOR_DB_NAME=your-sensor-db-name

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=300

# Database Connection Pooling
USE_CONNECTION_POOLING=true
DB_POOL_MIN_CONNECTIONS=3
DB_POOL_MAX_CONNECTIONS=15
DB_POOL_MAX_IDLE_TIME=3600
DB_CONNECTION_TIMEOUT=30
